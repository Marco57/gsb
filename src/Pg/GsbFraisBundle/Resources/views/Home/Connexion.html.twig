{% extends "PgGsbFraisBundle::layout.html.twig" %}
 {% block  body %}

<div id="contenu">
     {% if (message is defined) %}
    <div class = "erreur">
        <ul>  {{message}}  </ul> </div>
    {% endif %}
    <form method="POST" action="{{path('pg_gsb_frais_validerconnexion')}}">
        <div class="row">
            <div class="col-lg-12 col-md-6">
                <label for="nom">Login*</label>
                <input id="login" type="text" name="login"  size="30" maxlength="45">
            </div> 
            <div class="col-lg-12 col-md-6">
                <label for="mdp">Mot de passe*</label>
                <input id="mdp"  type="password"  name="mdp" size="30" maxlength="45">
            </div> 
            <div class="col-lg-12 col-md-6">
                <input type="submit" class="btn-primary" value="Valider" name="valider">
                <input type="reset" class="btn-primary" value="Annuler" name="annuler">
            </div>
        </div> 
    </form>
</div>

{% endblock %}
